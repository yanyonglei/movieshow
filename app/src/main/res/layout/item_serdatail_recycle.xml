<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/image_item_serdatail"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_item_serdataillist"
        android:layout_toRightOf="@id/image_item_serdatail"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="123"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_item_serdatail"
        android:layout_marginTop="10dp"
        android:layout_below="@id/title_item_serdataillist"
        android:layout_marginLeft="10dp"
        android:text="456"
        android:layout_toRightOf="@id/image_item_serdatail"/>


</RelativeLayout>