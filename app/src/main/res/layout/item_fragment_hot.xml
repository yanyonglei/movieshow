<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/imageview_hot"
        android:src="@mipmap/main_pic_shadow"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="haha"
        android:textColor="#fff"
        android:layout_alignBottom="@id/imageview_hot"
        android:textSize="15sp"
        android:id="@+id/title_hot"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignBottom="@id/imageview_hot"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:id="@+id/linear_layout_hot"
        ></LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageview_hot"
        android:textColor="#fff"
        android:layout_toRightOf="@id/linear_layout_hot"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="fenshu"
        android:textSize="10sp"

        android:id="@+id/textview_grade_hot"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/textview_grade_hot"
        android:id="@+id/imageview_share_hot"
        android:src="@mipmap/banner_share"
        android:layout_marginBottom="13dp"

        android:layout_alignBottom="@id/imageview_hot"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageview_hot"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:layout_marginLeft="5dp"
        android:id="@+id/textview_share_hot"
        android:layout_toRightOf="@id/imageview_share_hot"
        android:textSize="10sp"
        android:text="zz"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageview_hot"
        android:layout_alignParentRight="true"
        android:text="00:00"
        android:textColor="#fff"
        android:id="@+id/text_time_hot"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:textSize="10sp"/>
</RelativeLayout>