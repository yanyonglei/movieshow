<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slide_bg"
    android:orientation="vertical"
  >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="30dp">
    <ImageView
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:src="@drawable/side_set"
    android:layout_marginRight="50dp"
    android:clickable="true"
    android:onClick="setting"
    />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/default_avatar"
        android:clickable="true"
        android:onClick="login"

        />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/side_message"
        android:layout_marginLeft="50dp"
        android:clickable="true"
        android:onClick="message"/>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="点击登录"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="Myorder"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/imageview_order"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/side_subscribe"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订阅"
                android:layout_below="@id/imageview_order"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#fff"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="offlinecache"
            android:layout_weight="1"
            android:gravity="center_horizontal"

            >

            <ImageView
                android:id="@+id/imageview_cache"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/side_cache"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离线缓存"
                android:layout_below="@id/imageview_cache"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#fff"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="Mylove"
            android:layout_weight="1"
            android:gravity="center_horizontal"

            >

            <ImageView
                android:id="@+id/imageview_mylove"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/black_lick_icon"
                android:layout_marginLeft="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我喜欢的"
                android:layout_below="@id/imageview_mylove"
                android:textColor="#fff"
                android:textSize="15dp"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
       <RadioGroup
           android:id="@+id/radiogroup_choose"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginLeft="30dp"
           >
           <RadioButton
               android:id="@+id/radiobutton_home"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="首页"
               android:textColor="#848484"
               android:button="@null"
               android:drawableLeft="@drawable/home_selector"

               />
           <RadioButton
               android:id="@+id/radiobutton_channel"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="频道"
               android:textColor="#848484"
               android:button="@null"
               android:drawableLeft="@drawable/channel_selector"

               />
           <RadioButton
               android:id="@+id/radiobutton_series"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="系列"
               android:textColor="#848484"
               android:button="@null"
               android:drawableLeft="@drawable/series_selector"

               />
           <RadioButton
               android:id="@+id/radiobutton_behind"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="幕后"
               android:textColor="#848484"
               android:button="@null"
               android:drawableLeft="@drawable/behind_selector"

               />
       </RadioGroup>
    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:onClick="closeActivity"
        android:src="@drawable/side_close"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="230dp"
        />
</LinearLayout>
