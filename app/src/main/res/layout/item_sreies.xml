<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/imageview_sreies"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="title"
        android:id="@+id/title_sreies"
        android:layout_below="@id/imageview_sreies"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_num_sreies"
        android:layout_below="@id/title_sreies"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:textColor="#565656"
        android:text="79"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_people_series"
        android:layout_below="@id/title_sreies"
        android:layout_toRightOf="@id/textview_num_sreies"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#565656"
        android:text="80000"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageview_dingyue_series"
        android:layout_below="@id/image_search"


        android:layout_alignBottom="@id/textview_num_sreies"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@mipmap/attention"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_content_series"
        android:textColor="#000"
        android:text="zzzz"
        android:layout_below="@id/textview_num_sreies"
        android:textSize="15sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        />

</RelativeLayout>